{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.20.0",
    "express": "^4.17.1",
    "path": "^0.12.7",
    "react": "^16.14.0",
    "socket.io": "^4.5.1",
    "unique-names-generator": "^4.7.1",
    "uuid-random": "^1.3.2"
  },
  "engines": {
    "node": ">=14.19.0"
  },
  "scripts": {
    "start": "node server/index.js",
    "build": "cd client && npm install && npm run build",
    "watch-client": "cd client && npm run watch",
    "watch-server": "npm-watch"
  },
  "watch": {
    "start": {
      "patterns": [
        "server"
      ],
      "extensions": "js,css"
    }
  },
  "devDependencies": {
    "npm-watch": "^0.11.0"
  }
}
